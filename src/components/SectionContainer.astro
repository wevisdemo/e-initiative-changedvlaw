---
interface Props {
	id?: string;
	outerClass?: string;
	innerClass?: string;
	hideNavbar?: boolean;
}

const { id, outerClass, innerClass, hideNavbar } = Astro.props;
---

<div
	{id}
	class={`w-full flex flex-col items-center px-3 py-6 md:py-8 ${outerClass || ''}`}
	data-navbar={hideNavbar ? 'hide' : 'show'}
>
	<div class={innerClass}>
		<slot />
	</div>
</div>
